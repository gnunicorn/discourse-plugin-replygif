<div class="modal-body replygif-modal" style="overflow: visible">
  <div>
    {{#if loadingTags}}
      {{i18n "loading"}}
    {{else }}
      <div class="categories">
        <label for="categories">{{i18n "replygif.categories"}}</label>
        {{combo-box name="categories" valueAttribute="title" value=controller.selectedCategory
          nameProperty="title" content=filterCategories none="replygif.none" }}
      </div>
      <div class="tags">
        <label for="replygif-tag-selector">{{i18n "replygif.tags"}}</label>
        {{replygif-tag-selector name="replygif-tag-selector" datasource=controller}}
      </div>
    {{/if}}
  </div>
  <div class="replygif-content">
    {{#if loading}}
      {{i18n "loading"}}
    {{else}}
      <div class="replygif-box">
        {{#each result in currentGifs}}
          {{#view replygif-result datasource=result}}
            <img class="replygif-img" {{bind-attr src=view.imagePath}}>
            {{#if view.selected}}
              <button class="btn btn-primary" {{action "pickItem" target=view}}>{{i18n "reply_gif.select"}}</button>
            {{/if}}
          {{/view}}
        {{/each}}
      </div>
    {{/if}}
  </div>
</div>
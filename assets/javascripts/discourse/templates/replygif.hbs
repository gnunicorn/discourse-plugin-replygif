<div class="modal-body replygif-modal" style="overflow: visible">
  <div>
    {{#if loadingTags}}
      {{i18n "loading"}}
    {{else }}
      <div class="categories">
        <label for="categories">Categories</label>
        {{combo-box name="categories" valueAttribute="title" value="controller.selectedCategory" nameProperty="title" content=filterCategories none="replygif.none" }}
      </div>
      <div class="tags">
        <label for="replygif-tag-selector">Tags</label>
        {{replygif-tag-selector name="replygif-tag-selector" datasource=controller}}
      </div>
    {{/if}}
  </div>
  <div class="replygif-content">
    {{#if loading}}
      {{i18n "loading"}}
    {{else}}
      <div class="replygif-box">
      </div>
    {{/if}}
  </div>
</div>